{% extends 'base.html.twig' %}
{% block title %}Ajouter un nouveau produit.
{% endblock %}
{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>
					Ajouter un nouveau produit à la catégorie
					{{categorie.name}}.
				</h1>
				{{form_start(addProductForm)}}
				{{form_row(addProductForm.name)}}
				{{form_row(addProductForm.description)}}
				{{form_row(addProductForm.price)}}
				{{form_row(addProductForm.stock)}}
				{{form_row(addProductForm.imageFile)}}
				<button type="submit" class='btn btn-primary mt-3'>Créer</button>
				{{form_end(addProductForm)}}
			</div>

		</section>
	</main>

{% endblock %}
